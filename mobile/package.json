{
  "name": "tradebybarter-mobile",
  "version": "1.0.0",
  "description": "TradeByBarter Mobile App - Nigerian barter marketplace",
  "author": "TradeByBarter Team",
  "main": "index.ts",
  "private": true,
  "license": "PROPRIETARY",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo build",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "check-emojis": "node scripts/check-emojis.js",
    "check-emojis:pre-commit": "node scripts/check-emojis.js --pre-commit",
    "validate": "npm run lint && npm run format:check && npm run type-check && npm run check-emojis",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@expo-google-fonts/inter": "^0.4.2",
    "@expo-google-fonts/poppins": "^0.4.0",
    "@expo/vector-icons": "^14.0.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "axios": "^1.6.8",
    "babel-preset-expo": "^54.0.1",
    "date-fns": "^3.6.0",
    "expo": "~51.0.28",
    "expo-camera": "~15.0.16",
    "expo-device": "~6.0.2",
    "expo-font": "^14.0.8",
    "expo-image-picker": "~15.0.7",
    "expo-linking": "~6.3.1",
    "expo-local-authentication": "~14.0.1",
    "expo-location": "~17.0.1",
    "expo-notifications": "~0.28.17",
    "expo-secure-store": "~13.0.2",
    "expo-splash-screen": "^31.0.10",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-hook-form": "^7.51.4",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "socket.io-client": "^4.7.5",
    "zod": "^3.23.6",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/react": "~18.2.0",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-expo": "~50.0.4",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tailwindcss": "3.3.2",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
